#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export PLUGIN_COMMAND_PREFIX="cron-restart"
export CRON_RESTART_ROOT=${CRON_RESTART_ROOT:="$DOKKU_LIB_ROOT/services/$PLUGIN_COMMAND_PREFIX"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export CRON_RESTART_HOST_ROOT=${CRON_RESTART_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/PLUGIN_COMMAND_PREFIX"}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$CRON_RESTART_ROOT
export PLUGIN_DATA_HOST_ROOT=$CRON_RESTART_HOST_ROOT
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi
